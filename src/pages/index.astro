---
import PageHolder from "../layouts/PageHolder.astro";
import Button from "../components/Button.astro";
---
<PageHolder title="Home">

	<div class="flex justify-center items-center mt-64">
		<div class="text-center">
			<h1 class="font-bold text-4xl sm:text-5xl md:text-6xl lg:text-8xl text-purple-500">OLEKALEKSANDER<span class="text-xl text-white ml-2">#5599</span></h1>
			<p class="mt-4 text-3xl text-neutral-30">I like to <span class="text-purple-400">code</span>.</p>
			<br>
			<Button url="/blog">Blog</Button> 
			<Button url="#portfolio">Portfolio</Button> 
		</div>
		
	</div>
	<svg class="mt-20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#a855f7" fill-opacity="1" d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
	<div class="bg-purple-500 -mt-2">
		<section id="portfolio" class="mt-2">
			<div class="container max-w-xs sm:max-w-1xl lg:max-w-6xl mx-auto">
				<br class="visible md:hidden"><br class="visible md:hidden">
				<h2 class="text-5xl font-bold tracking-tight text-center">
					Portfolio
				</h2>
				<p class="mt-2 text-2xl text-center text-neutral-100">
					Some things I've built.
				</p>
				<div class="grid grid-cols-4 gap-6 mt-12 sm:grid-cols-1 lg:grid-cols-12">
					<div class="flex flex-col items-center shadow-lg border border-neutral-800 bg-neutral-800 justify-between col-span-4 px-3 py-12 space-y-4 hover:shadow-xl duration-300 hover:-translate-y-3 rounded-lg">
						<img src="/assets/img/nitronodes.png" alt="Nitronodes" class="w-12">
						<h4 class="text-md text-white font-bold">NitroNodes</h4>
						<p class="text-base text-center text-neutral-300">
							24/7 freemium hosting service.<br><br>
							<Button url="https://nitronodes.xyz">Visit</Button>
						</p>
					</div>

					<div class="flex flex-col items-center shadow-lg border border-neutral-800 bg-neutral-800 justify-between col-span-4 px-3 py-12 space-y-4 hover:shadow-xl duration-300 hover:-translate-y-3 rounded-lg">
						<img src="/assets/img/lemontools.png" alt="LemonTools" class="w-12">
						<h4 class="text-md text-white font-bold">LemonTools</h4>
						<p class="text-base text-center text-neutral-300">
							Universal tools and cheats for many games<br><br>
							<Button url="https://lemontools.xyz">Visit</Button>
						</p>
					</div>

					<div class="flex flex-col items-center shadow-lg border border-neutral-800 bg-neutral-800 justify-between col-span-4 px-3 py-12 space-y-4 hover:shadow-xl duration-300 hover:-translate-y-3 rounded-lg">
						<img src="/assets/img/vest.png" alt="Vest" class="w-12">
						<h4 class="text-md text-white font-bold">
							Vest
						</h4>
						<p class="text-base text-center text-neutral-300">
							Powerful multifunctional discord bot written in TS<br><br>
							<Button url="https://discordapp.com/api/oauth2/authorize?client_id=998155429337124864&permissions=8&scope=applications.commands%20bot">Invite</Button>
						</p>
					</div>
				</div>
			</div>
		</section>
		<section id="blog" class="mt-36">
			<div class="container max-w-xs sm:max-w-1xl lg:max-w-6xl mx-auto">
				<br class="visible md:hidden"><br class="visible md:hidden">
				<h2 class="text-5xl font-bold tracking-tight text-center">
					Blog
				</h2>
				<p class="mt-2 text-2xl text-center text-neutral-100">
					Recent posts on my blog
				</p>
				<div class="grid grid-cols-4 gap-6 mt-12 sm:grid-cols-1 lg:grid-cols-12">
					<div class="flex flex-col items-center shadow-lg border border-neutral-800 bg-neutral-800 justify-between col-span-4 px-3 py-12 space-y-4 hover:shadow-xl duration-300 hover:-translate-y-3 rounded-lg">

						<h4 class="text-md text-white font-bold">NitroNodes</h4>
						<p class="text-base text-center text-neutral-300">
							24/7 free hosting service.<br><br>
							<Button url="#">Read</Button>
						</p>
					</div>

					<div class="flex flex-col items-center shadow-lg border border-neutral-800 bg-neutral-800 justify-between col-span-4 px-3 py-12 space-y-4 hover:shadow-xl duration-300 hover:-translate-y-3 rounded-lg">

						<h4 class="text-md text-white font-bold">LemonTools</h4>
						<p class="text-base text-center text-neutral-300">
							Universal tools and cheats for many games<br><br>
							<Button url="#">Visit</Button>
						</p>
					</div>

					<div class="flex flex-col items-center shadow-lg border border-neutral-800 bg-neutral-800 justify-between col-span-4 px-3 py-12 space-y-4 hover:shadow-xl duration-300 hover:-translate-y-3 rounded-lg">
						<h4 class="text-md text-white font-bold">
							Vest
						</h4>
						<p class="text-base text-center text-neutral-300">
							Powerful multifunctional discord bot written in TS<br><br>
							<Button url="#">Read</Button>
						</p>
					</div>
				</div>
			</div>
		</section>
	</div>
	<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#a855f7" fill-opacity="1" d="M0,192L48,192C96,192,192,192,288,181.3C384,171,480,149,576,122.7C672,96,768,64,864,80C960,96,1056,160,1152,165.3C1248,171,1344,117,1392,90.7L1440,64L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>
	<br><br><br>
</PageHolder>